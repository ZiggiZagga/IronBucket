<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot default configuration -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Define properties -->
    <property name="LOG_FILE" value="${LOG_FILE:-${LOG_PATH:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}/}spring.log}"/>
    <property name="LOG_LEVEL_PATTERN" value="%5p"/>
    <property name="LOG_DATEFORMAT_PATTERN" value="yyyy-MM-dd'T'HH:mm:ss.SSSZ"/>
    
    <!-- JSON Console Appender for structured logging -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"sentinel-gear","environment":"${SPRING_PROFILES_ACTIVE:default}"}</customFields>
            <includeContext>true</includeContext>
            <includeMdcData>true</includeMdcData>
            <includeCallerData>false</includeCallerData>
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <rootCauseFirst>true</rootCauseFirst>
            </throwableConverter>
        </encoder>
    </appender>
    
    <!-- Plain text console for development (conditional) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    
    <!-- Appender for Spring profiles -->
    <springProfile name="!production">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.ironbucket" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.springframework.cloud" level="DEBUG"/>
    </springProfile>
    
    <springProfile name="production">
        <root level="WARN">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
        <logger name="com.ironbucket" level="INFO"/>
    </springProfile>
    
    <!-- Docker profile -->
    <springProfile name="docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
        </root>
        <logger name="com.ironbucket" level="DEBUG"/>
        <logger name="org.springframework.security" level="INFO"/>
    </springProfile>
    
    <!-- OpenTelemetry / Observability logging -->
    <logger name="io.opentelemetry" level="WARN"/>
    <logger name="io.micrometer" level="WARN"/>
</configuration>
